@model VehicleMarket.Models.UserData
@{ 

                Layout = null;
    /*
     Strona tytułowa
     Sprawdza, czy gość jest stałym klientem
     Tylko wtedy ma dostęp do strony
     */
}


<style>
    /*
        Kontener z oknem logowania
    */
    #box {
        border: 1px solid black;
        height: 100%;
    }

    #main-div {
        height: 900px;
        background-image: url('../../images/Background.jpg');
        background-size: 100% 900px;
    }

    .insidebox {
        /*Marginesy, padding i przezroczystość tła boxa z logowaniem*/
        margin: 14% auto;
        max-width: 500px;
        min-width: 200px;
        padding-left: 60px;
        padding-right: 60px;
        border-radius: 10px;
        background-color: transparent;
        
    }

    .form-group {
        background-color: chocolate;
    }
    div h1 {
        /*Napis "Are you our client?*/
        text-align: center;
        font-size: 34px;
        color: chocolate;
    }

    p#para {
        text-align: center;
        font-size: 50px;
    }
</style>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="main-div">
    <div id="box" class="img">
        @using (@Html.BeginForm())
        {
<div class="insidebox">
    <div> <h1>Jesteś naszym klientem?</h1></div>
    <div class="form-group">
        <div class="input-group">
            <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
            @Html.TextBoxFor(x => x.Login, new { @class = "form-control", @placeholder = "Login" })

        </div>
        <span>   @Html.ValidationMessageFor(x => x.Login) </span>

    </div>
    <div class="form-group">
        <div class="input-group">
            <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Hasło" })

        </div>
        <span>   @Html.ValidationMessageFor(x => x.Password) </span>
    </div>




    <div class="form-group">
        <input type="submit" value="No jasne!" class="btn btn-success btn-block" />

    </div>

    <div class="form-group">
        <p>@ViewBag.error</p>
    </div>



</div>

}
    </div>

</div>


<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}